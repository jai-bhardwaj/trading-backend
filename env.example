# Environment Configuration
ENVIRONMENT=development
DEBUG=true
VERSION=2.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=trading
DB_PASSWORD=your_db_password_here
DB_DATABASE=trading_dev
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_SSL_MODE=prefer

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=30

# Broker Configuration - Angel One
ANGEL_ONE_API_KEY=your_angel_one_api_key_here
ANGEL_ONE_CLIENT_ID=your_angel_one_client_id_here
ANGEL_ONE_PASSWORD=your_angel_one_password_here
ANGEL_ONE_TOTP_SECRET=your_angel_one_totp_secret_here

# Broker Timeouts and Retries
BROKER_CONNECTION_TIMEOUT=30
BROKER_REQUEST_TIMEOUT=10
BROKER_MAX_RETRIES=3
BROKER_RETRY_DELAY=1.0

# Trading Engine Configuration
TRADING_WORKER_COUNT=4
TRADING_MAX_QUEUE_SIZE=10000
STRATEGY_EXECUTION_INTERVAL=30

# Risk Management
RISK_MAX_DAILY_LOSS_PCT=0.02
RISK_MAX_POSITION_SIZE_PCT=0.10
RISK_MAX_ORDERS_PER_MINUTE=10

# Market Configuration
MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30
TIMEZONE=Asia/Kolkata

# Paper Trading
PAPER_TRADING_ENABLED=false
INITIAL_PAPER_BALANCE=1000000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/trading.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
JAEGER_ENDPOINT=
HEALTH_CHECK_INTERVAL=30

# Alerting
ALERT_EMAIL_ENABLED=false
ALERT_SLACK_ENABLED=false
SLACK_WEBHOOK_URL=

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]
CORS_CREDENTIALS=true 
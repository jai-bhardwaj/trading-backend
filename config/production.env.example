# ENTERPRISE TRADING SYSTEM - PRODUCTION ENVIRONMENT
# Copy this file to .env and configure with your production values

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://username:password@localhost:5432/trading_backend
# Alternative: Individual components
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_backend
DB_USER=trading_user
DB_PASSWORD=secure_db_password_here

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=secure_redis_password_here

# ===== ENCRYPTION & SECURITY =====
ENCRYPTION_KEY=your_32_byte_base64_key_here
MASTER_PASSWORD=ultra_secure_master_password_2024
ENCRYPTION_SALT=unique_salt_for_your_deployment

# ===== APPLICATION SETTINGS =====
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# ===== TRADING CONFIGURATION =====
MAX_CONCURRENT_ORDERS=500
ANGEL_ONE_RATE_LIMIT=100
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=300

# ===== PERFORMANCE TUNING =====
DB_POOL_SIZE=20
REDIS_POOL_SIZE=20
HTTP_POOL_SIZE=50
DB_TIMEOUT=30
HTTP_TIMEOUT=30
ORDER_EXECUTION_TIMEOUT=60 
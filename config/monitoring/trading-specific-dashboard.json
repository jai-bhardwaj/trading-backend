{
    "dashboard": {
        "id": null,
        "title": "üìä Trading Engine Application Performance",
        "tags": [
            "trading",
            "application",
            "orders",
            "redis",
            "database"
        ],
        "style": "dark",
        "timezone": "browser",
        "refresh": "5s",
        "time": {
            "from": "now-15m",
            "to": "now"
        },
        "panels": [
            {
                "id": 1,
                "title": "üéØ Trading Engine Health",
                "type": "stat",
                "targets": [
                    {
                        "expr": "up{job=\"trading-engine\"}",
                        "legendFormat": "Engine Status"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "red",
                                    "value": 0
                                },
                                {
                                    "color": "green",
                                    "value": 1
                                }
                            ]
                        },
                        "mappings": [
                            {
                                "options": {
                                    "0": {
                                        "text": "DOWN",
                                        "color": "red"
                                    }
                                },
                                "type": "value"
                            },
                            {
                                "options": {
                                    "1": {
                                        "text": "HEALTHY",
                                        "color": "green"
                                    }
                                },
                                "type": "value"
                            }
                        ]
                    }
                },
                "gridPos": {
                    "h": 6,
                    "w": 8,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "üìà Orders Per Second",
                "type": "stat",
                "targets": [
                    {
                        "expr": "rate(trading_orders_processed_total[1m])",
                        "legendFormat": "Orders/sec"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "ops",
                        "decimals": 2,
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "red",
                                    "value": 0
                                },
                                {
                                    "color": "yellow",
                                    "value": 10
                                },
                                {
                                    "color": "green",
                                    "value": 50
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 6,
                    "w": 8,
                    "x": 8,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "‚è±Ô∏è Average Processing Time",
                "type": "stat",
                "targets": [
                    {
                        "expr": "avg(trading_order_processing_duration_seconds)",
                        "legendFormat": "Avg Time"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "unit": "s",
                        "decimals": 3,
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": 0
                                },
                                {
                                    "color": "yellow",
                                    "value": 0.5
                                },
                                {
                                    "color": "red",
                                    "value": 2.0
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 6,
                    "w": 8,
                    "x": 16,
                    "y": 0
                }
            },
            {
                "id": 4,
                "title": "üìã Queue Status",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "redis_queue_pending_orders",
                        "legendFormat": "Pending Orders"
                    },
                    {
                        "expr": "redis_queue_processing_orders",
                        "legendFormat": "Processing"
                    },
                    {
                        "expr": "redis_queue_failed_orders",
                        "legendFormat": "Failed"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "short"
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 6
                }
            },
            {
                "id": 5,
                "title": "üî¥ Redis Performance",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "redis_connected_clients",
                        "legendFormat": "Connected Clients"
                    },
                    {
                        "expr": "rate(redis_commands_total[5m])",
                        "legendFormat": "Commands/sec"
                    },
                    {
                        "expr": "redis_memory_used_bytes / 1024 / 1024",
                        "legendFormat": "Memory Usage (MB)"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 6
                }
            },
            {
                "id": 6,
                "title": "üóÑÔ∏è Database Connections",
                "type": "gauge",
                "targets": [
                    {
                        "expr": "postgresql_active_connections",
                        "legendFormat": "Active"
                    },
                    {
                        "expr": "postgresql_idle_connections",
                        "legendFormat": "Idle"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "max": 20,
                        "min": 0,
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": 0
                                },
                                {
                                    "color": "yellow",
                                    "value": 10
                                },
                                {
                                    "color": "red",
                                    "value": 18
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 0,
                    "y": 14
                }
            },
            {
                "id": 7,
                "title": "‚ö° Worker Performance",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "trading_worker_active_count",
                        "legendFormat": "Active Workers"
                    },
                    {
                        "expr": "rate(trading_worker_processed_total[5m])",
                        "legendFormat": "Worker Throughput"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 8,
                    "y": 14
                }
            },
            {
                "id": 8,
                "title": "‚ùå Error Rates",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "rate(trading_orders_failed_total[5m])",
                        "legendFormat": "Order Failures/sec"
                    },
                    {
                        "expr": "rate(redis_errors_total[5m])",
                        "legendFormat": "Redis Errors/sec"
                    },
                    {
                        "expr": "rate(database_errors_total[5m])",
                        "legendFormat": "DB Errors/sec"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "ops"
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 16,
                    "y": 14
                }
            },
            {
                "id": 9,
                "title": "üíæ Redis Memory Usage",
                "type": "gauge",
                "targets": [
                    {
                        "expr": "(redis_memory_used_bytes / redis_memory_max_bytes) * 100",
                        "legendFormat": "Memory %"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "unit": "percent",
                        "max": 100,
                        "min": 0,
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": 0
                                },
                                {
                                    "color": "yellow",
                                    "value": 70
                                },
                                {
                                    "color": "orange",
                                    "value": 85
                                },
                                {
                                    "color": "red",
                                    "value": 95
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 0,
                    "y": 22
                }
            },
            {
                "id": 10,
                "title": "üîÑ Sync Worker Performance",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "trading_db_sync_orders_synced_total",
                        "legendFormat": "Orders Synced"
                    },
                    {
                        "expr": "trading_db_sync_batch_size",
                        "legendFormat": "Batch Size"
                    },
                    {
                        "expr": "trading_db_sync_duration_seconds",
                        "legendFormat": "Sync Duration (s)"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 8,
                    "y": 22
                }
            },
            {
                "id": 11,
                "title": "üìä Order Status Distribution",
                "type": "piechart",
                "targets": [
                    {
                        "expr": "trading_orders_by_status{status=\"pending\"}",
                        "legendFormat": "Pending"
                    },
                    {
                        "expr": "trading_orders_by_status{status=\"completed\"}",
                        "legendFormat": "Completed"
                    },
                    {
                        "expr": "trading_orders_by_status{status=\"failed\"}",
                        "legendFormat": "Failed"
                    },
                    {
                        "expr": "trading_orders_by_status{status=\"cancelled\"}",
                        "legendFormat": "Cancelled"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 16,
                    "y": 22
                }
            }
        ]
    },
    "overwrite": true
}
{
    "dashboard": {
        "id": null,
        "title": "üöÄ Real-Time Trading System Performance",
        "tags": [
            "trading",
            "performance",
            "real-time"
        ],
        "style": "dark",
        "timezone": "browser",
        "refresh": "1s",
        "time": {
            "from": "now-5m",
            "to": "now"
        },
        "panels": [
            {
                "id": 1,
                "title": "üü¢ System Health Overview",
                "type": "stat",
                "targets": [
                    {
                        "expr": "up",
                        "legendFormat": "{{job}}"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "red",
                                    "value": 0
                                },
                                {
                                    "color": "green",
                                    "value": 1
                                }
                            ]
                        },
                        "mappings": [
                            {
                                "options": {
                                    "0": {
                                        "text": "DOWN",
                                        "color": "red"
                                    }
                                },
                                "type": "value"
                            },
                            {
                                "options": {
                                    "1": {
                                        "text": "UP",
                                        "color": "green"
                                    }
                                },
                                "type": "value"
                            }
                        ]
                    }
                },
                "gridPos": {
                    "h": 6,
                    "w": 24,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "‚ö° CPU Usage % (Real-Time)",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
                        "legendFormat": "CPU Usage %"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "percent",
                        "min": 0,
                        "max": 100,
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": 0
                                },
                                {
                                    "color": "yellow",
                                    "value": 70
                                },
                                {
                                    "color": "red",
                                    "value": 90
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 6
                }
            },
            {
                "id": 3,
                "title": "üíæ Memory Usage (Real-Time)",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
                        "legendFormat": "Memory Usage %"
                    },
                    {
                        "expr": "node_memory_MemAvailable_bytes / 1024 / 1024 / 1024",
                        "legendFormat": "Available (GB)"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "percent"
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 6
                }
            },
            {
                "id": 4,
                "title": "üñ•Ô∏è System Load Average",
                "type": "gauge",
                "targets": [
                    {
                        "expr": "node_load1",
                        "legendFormat": "1min"
                    },
                    {
                        "expr": "node_load5",
                        "legendFormat": "5min"
                    },
                    {
                        "expr": "node_load15",
                        "legendFormat": "15min"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "max": 8,
                        "min": 0,
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": 0
                                },
                                {
                                    "color": "yellow",
                                    "value": 2
                                },
                                {
                                    "color": "orange",
                                    "value": 4
                                },
                                {
                                    "color": "red",
                                    "value": 6
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 0,
                    "y": 14
                }
            },
            {
                "id": 5,
                "title": "üíø Disk Usage",
                "type": "gauge",
                "targets": [
                    {
                        "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\"})",
                        "legendFormat": "Root /"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "unit": "percent",
                        "max": 100,
                        "min": 0,
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": 0
                                },
                                {
                                    "color": "yellow",
                                    "value": 70
                                },
                                {
                                    "color": "orange",
                                    "value": 85
                                },
                                {
                                    "color": "red",
                                    "value": 95
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 8,
                    "y": 14
                }
            },
            {
                "id": 6,
                "title": "üå°Ô∏è System Temperature",
                "type": "gauge",
                "targets": [
                    {
                        "expr": "node_hwmon_temp_celsius",
                        "legendFormat": "{{chip}} {{sensor}}"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "unit": "celsius",
                        "max": 100,
                        "min": 0,
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "blue",
                                    "value": 0
                                },
                                {
                                    "color": "green",
                                    "value": 30
                                },
                                {
                                    "color": "yellow",
                                    "value": 60
                                },
                                {
                                    "color": "orange",
                                    "value": 75
                                },
                                {
                                    "color": "red",
                                    "value": 85
                                }
                            ]
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 16,
                    "y": 14
                }
            },
            {
                "id": 7,
                "title": "üåê Network Traffic (Real-Time)",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "irate(node_network_receive_bytes_total{device!=\"lo\"}[5m]) * 8",
                        "legendFormat": "RX {{device}}"
                    },
                    {
                        "expr": "irate(node_network_transmit_bytes_total{device!=\"lo\"}[5m]) * 8",
                        "legendFormat": "TX {{device}}"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "bps"
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 22
                }
            },
            {
                "id": 8,
                "title": "üì¶ Container Performance",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "rate(container_cpu_usage_seconds_total{name=~\".+\"}[5m]) * 100",
                        "legendFormat": "{{name}} CPU %"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "percent"
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 30
                }
            },
            {
                "id": 9,
                "title": "üß† Container Memory Usage",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "container_memory_usage_bytes{name=~\".+\"} / 1024 / 1024",
                        "legendFormat": "{{name}}"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "megabytes"
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 30
                }
            },
            {
                "id": 10,
                "title": "üìä Disk I/O (Real-Time)",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "irate(node_disk_read_bytes_total[5m])",
                        "legendFormat": "Read {{device}}"
                    },
                    {
                        "expr": "irate(node_disk_written_bytes_total[5m])",
                        "legendFormat": "Write {{device}}"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "unit": "binBps"
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 38
                }
            },
            {
                "id": 11,
                "title": "‚öôÔ∏è Process Count & File Descriptors",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "node_procs_running",
                        "legendFormat": "Running Processes"
                    },
                    {
                        "expr": "node_filefd_allocated",
                        "legendFormat": "File Descriptors"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        }
                    }
                },
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 38
                }
            }
        ]
    },
    "overwrite": true
}
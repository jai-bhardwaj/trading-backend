# üê≥ Docker Environment Configuration for Trading Engine
# Copy this to .env and configure for your DigitalOcean managed services

# =====================================
# DigitalOcean Managed Database Configuration
# =====================================
# Get these values from your DigitalOcean database dashboard
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
# Example: postgresql://doadmin:your_password@db-postgresql-nyc1-12345-do-user-123456-0.b.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# =====================================
# Redis Configuration
# =====================================
# If using DigitalOcean managed Redis:
REDIS_URL=redis://username:password@host:port
# Example: redis://default:your_redis_password@redis-cluster-nyc1-12345-do-user-123456-0.b.db.ondigitalocean.com:25061

# If using local Redis in Docker (start with --profile local-redis):
# REDIS_URL=redis://localhost:6380/0

# =====================================
# Trading Engine Configuration
# =====================================
ENVIRONMENT=production
LOG_LEVEL=INFO
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# =====================================
# API Configuration
# =====================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# =====================================
# Monitoring Configuration
# =====================================
GRAFANA_PASSWORD=trading_admin_2025!
PROMETHEUS_RETENTION=200h

# =====================================
# Security Configuration
# =====================================
SECRET_KEY=your_ultra_secure_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
ENCRYPTION_KEY=your_encryption_key_here_change_in_production

# =====================================
# Broker Configuration
# =====================================
ANGEL_ONE_API_KEY=your_angel_one_api_key
ANGEL_ONE_CLIENT_ID=your_angel_one_client_id
ANGEL_ONE_CLIENT_SECRET=your_angel_one_client_secret
ANGEL_ONE_TOTP_SECRET=your_angel_one_totp_secret

# =====================================
# Performance Optimization
# =====================================
DB_POOL_SIZE=1
DB_MAX_OVERFLOW=0
REDIS_MAX_CONNECTIONS=50
WORKER_MEMORY_LIMIT=1G
API_MEMORY_LIMIT=512M

# =====================================
# Development Settings
# =====================================
DEBUG=False
TESTING=False
ENABLE_CORS=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =====================================
# Docker Specific Settings
# =====================================
COMPOSE_PROJECT_NAME=trading-engine
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1 
# Trading System Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# BROKER CONFIGURATION (Required)
# =============================================================================
ANGEL_ONE_API_KEY=your_api_key_here
ANGEL_ONE_SECRET_KEY=your_secret_key_here
ANGEL_ONE_CLIENT_ID=your_client_id_here
ANGEL_ONE_PIN=your_pin_here
ANGEL_ONE_TOTP_SECRET=your_totp_secret_here

# =============================================================================
# TRADING MODE (Required)
# =============================================================================
# PAPER = Paper trading (safe for testing)
# LIVE = Live trading (real money - use with caution)
TRADING_MODE=PAPER

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/trading_db
POSTGRES_DB=trading_db
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=secure_password_here

# =============================================================================
# REDIS CONFIGURATION (Required for sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=secure_redis_password_here

# =============================================================================
# SECURITY CONFIGURATION (Required)
# =============================================================================
# Generate a strong secret key for JWT tokens
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_15_MIN=5

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=production

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# MONITORING & ALERTS (Optional)
# =============================================================================
# Email notifications for critical errors
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=admin@yourcompany.com

# =============================================================================
# ADVANCED CONFIGURATION (Optional)
# =============================================================================
# Memory management
MAX_MEMORY_USAGE_MB=500
CLEANUP_INTERVAL_MINUTES=15

# Trading limits
MAX_ORDERS_PER_USER=100
MAX_POSITIONS_PER_USER=20
DEFAULT_STOP_LOSS_PERCENT=5.0

# Security
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=60
